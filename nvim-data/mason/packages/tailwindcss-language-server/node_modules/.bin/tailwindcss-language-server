#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@tailwindcss/language-server/bin/tailwindcss-language-server" "$@"
else 
  exec node  "$basedir/../@tailwindcss/language-server/bin/tailwindcss-language-server" "$@"
fi
